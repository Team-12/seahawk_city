<!DOCTYPE html>
<html>
<head>
  <title>SeahawkCity</title>

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>

  <link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap.min.css" rel="stylesheet">
  <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.2/js/bootstrap.min.js"></script>
  <script src="//code.jquery.com/jquery.js"></script>


</head>
<body>

  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
        <div class="page-header">
          
          <h1>
            <%= link_to "SeahawkCity", root_path %>
            <small>We&nbsp;are&nbsp;all&nbsp;12</small>
          </h1>

          <% 
              unless current_page?(:controller => 'users', :action => 'new') ||
                     current_page?(:controller => 'sessions', :action => 'new')
           %>
            <% if @current_user %>
              <p><%= link_to @current_user.user_name, profile_path %></p>
              <%= button_to "logout", {:controller=> "sessions", :action=> "destroy"}, :method => :delete %>
            <% else %>
              <%= link_to "Login", login_path, :class => "btn btn-primary" %>
              <%= link_to "Sign up", signup_path %>   
            <% end %>
          <% end %> 
          
        </div>
      </div>
    </div>
  </div>

  <%= yield %>

</body>
</html>
