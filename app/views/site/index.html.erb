<div class="container" style="width: 100%">
  <div class="row">
    <div class="col-xs-12 col-md-12">
      <!-- map -->
      <div style='width: 100%;'>
        <div id="map" style='width: 100%; height: 800px;'></div>
      </div>
      <!-- end map -->
      <br><%= link_to "Checkin", new_checkin_path, :class => "btn btn-primary", :id => "checkin_link" %>
    </div>
  </div>
  <hr>
  <div class="row">
    <div class="col-xs-12 col-md-12">
      <h2>Event List Section</h2>
      <p>List of Events goes here...</p>
      <ul>
        <li><%= link_to "Fake Event", "events/1" %></li>
      </ul>
    </div>
  </div>
</div>

<script>

$(function() {
  <% if @current_user && @current_user.checkins.any? %>
    var mapOptions={
      center:[<%= @last_user_checkin.latitude %>,<%= @last_user_checkin.longitude %>],
      zoom:16,
      markers:<%=raw @hash.to_json %>
    }
  <% elsif @current_user %>
    var mapOptions={
      center:[<%= @user_pin[0] %>,<%= @user_pin[1] %>],
      zoom:16,
      markers:<%=raw @hash.to_json %>
    }
  <% else %>
    var mapOptions={
      center:[47.6097,-122.3331],
      zoom:11,
      markers:<%=raw @hash.to_json %>
    }
  <% end %>


  drawMap(mapOptions);

})

</script>
