<div class="row">
  <%= render 'partials/flash' %>
  <div class="col-xs-12 col-md-12">
    <h2>Event Detail</h2>
    <!-- if @user.user_id = @event.user_id -->
    <!-- link_to edit_event_path goes here... -->
    <!-- end if -->
      <div class="eventDetail">
      Name: <%= @event.name %> <br>
      Location: <%= @event.location.name %> <br>
      Date: <%= @event.date %> <br>
      Start: <%= @event.start_time.strftime("%l:%M %p") %> <br>
      End: <%= @event.end_time.strftime("%l:%M %p") %> <br>
      Desc: <%= @event.desc %> <br>

     <%= cl_image_tag(@event.photo_url, :width => 275, :crop => :fill, :class => "cloudImg") %>

      </div>
    <hr>
    <h2>Checkins</h2>
    <!-- checkin link goes here... -->
    <% if @checkins %>
      <ul>
        <% @checkins.each do %>
          <li><%= @checkin.user.user_name %></li>
        <% end %>
      </ul>
    <% else %>
      <p>There are no checkins for this location. </p>
      <%= link_to "Add a Checkin", new_checkin_path, :class => "btn btn-primary checkin_link" %>
      <div class="checkin_searching">Searching for location...</div>
    <% end %>
    </div>
</div>

