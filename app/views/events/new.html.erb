<div class="row">
  <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
    <h1>Add a new event for: <%= Location.find_by_id(params[:locationid]).name %></h1>
    <h3>Navigate to: <%= link_to "Events", events_path %></h3><br>
      <%= bootstrap_form_for(@event) do |f| %>
        <h3>Upload Image</h3><%= f.file_field :photo %>
        <%= f.text_field :name, :placeholder => "Event Title" %>
        <%= f.text_field :desc, :placeholder => "Description"%>
        <%= f.text_field :date, :placeholder => "Date"%>
        <%= f.text_field :start_time, :placeholder => "Start Time" %>
        <%= f.text_field :end_time, :placeholder => "End Time" %>
        <%= f.hidden_field :location_id, value: params[:locationid], id: "location-id" %>
        <%= f.submit :class => "btn btn-primary", id: "location-id" %>
      <% end %>
  </div>
</div>


